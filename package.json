{
  "name": "using-jest",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "watch:test": "jest --watch"
  },
  "license": "MIT",
  "devDependencies": {
    "jest-cli": "^17.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": ["src/*.js"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
